# =============================================================================
# CODE CHAT AI - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains your personalized configuration settings

# =============================================================================
# üîë API CONFIGURATION (REQUIRED)
# =============================================================================

# Access Key for the application
ACCESS_KEY="your_secret_key"

# Primary API Key - REQUIRED for all AI operations
# Get your OpenRouter key from: https://openrouter.ai/keys
API_KEY=""

# =============================================================================
# üåê AI PROVIDER SELECTION
# =============================================================================
# Choose your AI provider: openrouter or custom
# Default: openrouter (recommended for most users)

PROVIDER="openrouter"

# Available AI Providers - comma-separated list of provider names
# These must match the provider class names in the providers/ directory
PROVIDERS="openrouter,custom"

# =============================================================================
# üîß PROVIDER-SPECIFIC CONFIGURATION
# =============================================================================

# --- OPENROUTER PROVIDER (Default & Recommended) ---
# Provides access to multiple AI models (OpenAI, Anthropic, Google, etc.)
# through a single API key. Get your key from: https://openrouter.ai/keys
#
# Example configuration:
# PROVIDER="openrouter"
# API_KEY="sk-or-v1-YOUR_KEY_HERE"
# No additional settings needed for OpenRouter

# --- CUSTOM PROVIDER ---
# Uncomment and configure if using a custom OpenAI-compatible API
#
# PROVIDER="custom"
# API_KEY="your-custom-api-key"
# API_URL="https://your-api.com/v1/chat/completions"
# DEFAULT_MODEL="your-model-name"
#
# Optional custom provider settings:
# AUTH_HEADER="Authorization"
# AUTH_FORMAT="Bearer {api_key}"

# API URLs (modify if using custom provider)
API_URL="https://api.openrouter.ai/v1/chat/completions"
TOKEN_URL="https://api.openrouter.ai/v1/token"

# OpenRouter specific configuration (optional)
OPENROUTER_API_URL="https://openrouter.ai/api/v1/chat/completions"
OPENROUTER_HTTP_REFERER="https://github.com/yourusername/code-chat-ai"
OPENROUTER_TITLE="Code Chat with AI"
OPENROUTER_TEMPERATURE="0.1"

# Custom provider configuration (if using custom provider)
CUSTOM_PROVIDER_API_URL="https://your-api.com/v1/chat"
CUSTOM_PROVIDER_REQUEST_TIMEOUT="30"

# =============================================================================
# ü§ñ MODEL CONFIGURATION (REQUIRED)
# =============================================================================

# Default model for analysis
DEFAULT_MODEL="gemini-2.5-flash-preview-09-2025"

# Available models list - comma-separated
MODELS="x-ai/grok-code-fast-1,google/gemini-2.5-flash-preview-09-2025,deepseek/deepseek-coder-v2,moonshotai/kimi-k2-0905"

# =============================================================================
# ‚öôÔ∏è AI PARAMETERS (OPTIONAL)
# =============================================================================

# Maximum tokens for AI responses (1-16000)
MAX_TOKENS="10000"

# Temperature: Controls creativity/randomness (0.0-2.0)
TEMPERATURE="0.7"

# AI request timeouts (seconds)
AI_CONNECT_TIMEOUT="30"
AI_READ_TIMEOUT="120"



CODE_PATH="."

VALIDATE_SSL="true"
# =============================================================================
# üé® USER INTERFACE CONFIGURATION
# =============================================================================

# UI Theme
UI_THEME="light"

# Main window size (optional)
WINDOW_SIZE="1200x800"

# =============================================================================
# üìÅ FILE SYSTEM CONFIGURATION
# =============================================================================

# Folders to ignore during codebase scanning
IGNORE_FOLDERS=""

# Supported file extensions (comma-separated, with dots)
SUPPORTED_EXTENSIONS=".py,.js,.ts,.jsx,.tsx,.java,.cpp,.c,.h,.cs,.go,.rs,.php,.rb,.swift,.kt,.scala,.r,.sql,.html,.css,.scss,.less,.json,.xml,.yaml,.yml,.toml,.md,.txt"

# Maximum file size to process (in bytes)
MAX_FILE_SIZE="10485760"

# =============================================================================
# üí¨ SYSTEM MESSAGE CONFIGURATION
# =============================================================================

# Current system message file
CURRENT_SYSTEM_PROMPT="systemmessage_documentation.txt"

# =============================================================================
# üé® ADDITIONAL UI SETTINGS
# =============================================================================

# Interface language
LANGUAGE="en"

# Custom API base URL (optional)
BASE_URL=""

# Auto-save conversations
AUTO_SAVE_CONVERSATIONS="true"

# Show line numbers in code blocks
SHOW_LINE_NUMBERS="true"

# Enable streaming responses
ENABLE_STREAMING="true"

# Frontend timeout in seconds
FRONT_END_TIMEOUT="120"

# Number of retry attempts for failed requests
RETRY_ATTEMPTS="3"

# Enable debug logging
DEBUG_LOGGING="true"

# Show token usage information
SHOW_TOKEN_USAGE="true"

# =============================================================================
# üìä LOGGING CONFIGURATION
# =============================================================================

# Logging level
LOG_LEVEL="DEBUG"

# Directory for log files
LOG_DIR="logs"

# =============================================================================
# üöÄ ADVANCED CONFIGURATION
# =============================================================================

# Cache size for file content (1-1000)
CACHE_SIZE="100"

# API request timeout in seconds (1-300)
REQUEST_TIMEOUT="60"

# =============================================================================
# üåê FASTAPI SERVER CONFIGURATION
# =============================================================================

# Port for the FastAPI server (default: 8000)
API_PORT="8000"

# Host for the FastAPI server (default: 0.0.0.0 for all interfaces)
API_HOST="0.0.0.0"

# =============================================================================
# üé® WEB APPLICATION CONFIGURATION
# =============================================================================

# Backend URL for frontend (default: http://localhost:8000)
FASTAPI_URL="http://localhost:8000"

# Frontend URL for CORS
FRONTEND_URL="http://localhost:5173"

# Port for NiceGUI web server (default: 8080)
WEB_PORT="8080"



# =============================================================================
# üìÅ PATH CONFIGURATION (for deployment on different servers)
# =============================================================================

# Directory for saving interactive session results
# This directory will be created if it doesn't exist
DIR_SAVE="results"

# Static files directory (absolute or relative path from project root)
# Project structure: backend/static/ contains static files served by FastAPI
# Default: Empty = auto-detects backend/static relative to backend/app/main.py
# Local/Dev: Leave empty or set to "backend/static"
# Production: Use absolute path like "/var/www/whysper/backend/static" or "C:/www/whysper/backend/static"
STATIC_DIR=""

# Prompts directory (absolute or relative path from project root)
# Project structure:
#   - Root contains systemmessage_*.txt files (optional)
#   - prompts/coding/agent/ contains agent prompt files (*.md)
# Default: Empty = uses current working directory (project root)
# Local/Dev: Leave empty (assumes you run from project root)
# Production: Use absolute path to project root like "/var/www/whysper" or "C:/www/whysper"
PROMPTS_DIR=""

# D2 diagram executable path (absolute or relative path)
# Project structure: bin/d2.exe (Windows) or bin/d2 (Linux) at project root
# Default: Empty = auto-detects in order: PATH, bin/d2.exe, bin/d2, /usr/local/bin/d2, /usr/bin/d2
# Local/Dev: Leave empty (will auto-detect bin/d2.exe in project root)
# Production: Use absolute path like "/var/www/whysper/bin/d2" or "C:/www/whysper/bin/d2.exe"
D2_EXECUTABLE_PATH=""

# =============================================================================
# üîß ADDITIONAL CONFIGURATION
# =============================================================================

# System prompt (legacy/alternative way to set system prompt)
SYSTEM_PROMPT=""

# Token-based authentication (optional)
TOKEN_USE_ID=""
TOKEN_PASSWORD=""

# Advanced AI parameters
TOP_P="1"
FREQUENCY_PENALTY="0"

